{
  "extends": [
    // xo rules - https://github.com/sindresorhus/eslint-config-xo/blob/master/index.js
    "xo",
    // angular rules - https://github.com/dustinspecker/eslint-config-angular/blob/master/index.js
    "angular"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      1,
      100,
      4,
      {
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ]
    // disabled because of https://github.com/eslint/eslint/issues/5234
    //    "quotes": [
    //      2,
    //      "single"
    //    ],
    // disabled because of https://github.com/eslint/eslint/issues/3306
    //    "strict": [
    //      2,
    //      "save"
    //    ]
  }
}
